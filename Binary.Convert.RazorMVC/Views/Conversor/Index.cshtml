@model ConversorMVC.Models.ConversorViewModel

@{
    ViewData["Title"] = "Conversor de Números";
}

<h1 class="text-center mb-5">Conversor de Números</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Index" asp-controller="Conversor" method="post">
            <div class="mb-3">
                <label asp-for="ConvertionType" class="form-label"></label>
                <select asp-for="ConvertionType" class="form-select" required>
                    <option disabled selected value="">Selecione o tipo de conversão</option>
                    <option value="DecimalParaBinario">Decimal para Binário</option>
                    <option value="BinarioParaDecimal">Binário para Decimal</option>
                    <option value="DecimalParaHexadecimal">Decimal para Hexadecimal</option>
                    <option value="HexadecimalParaDecimal">Hexadecimal para Decimal</option>
                </select>
                <span asp-validation-for="ConvertionType" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Input" class="form-label"></label>
                <input asp-for="Input" class="form-control" required/>
                <span asp-validation-for="Input" class="text-danger"></span>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-primary">Converter</button>
            </div>
        </form>

        @if (!string.IsNullOrEmpty(Model.Output))
        {
            <div class="alert alert-success mt-4">
                <strong>Resultado:</strong> @Model.Output
            </div>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
